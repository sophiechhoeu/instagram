<p id="notice"><%= notice %></p>
<div class="container">
  <%= render 'partials/userlogin' %>
</div>
<div class="container align-content-center">
  <h1>Instagram Feed</h1>

  <%= link_to 'New Photo', new_photo_path, class: "btn btn-primary"%>
  <div class="row">

    <div class="col">
      <% @photos.each do |photo| %>
        <div class="card" style="width: 20rem;">
          <img class="card-img-top" src="<%= photo.image_url %>" alt="Card image cap">
            <div class="card-block">
              <h4 class="card-title"><%= photo.user.username %></h4>
              <p class="card-text"><%= photo.caption %></p>
              <%= link_to 'Show', photo, class: "btn btn-primary" %>
              <%= link_to 'Edit', edit_photo_path(photo), class: "btn btn-primary" %>
              <%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %>
              <%= link_to like_photo_path(photo), class:"btn btn-primary", method: :put do %>
                Upvote
                  <%= photo.get_upvotes.size %>
              <% end %>

              <%= link_to dislike_photo_path(photo), class:"btn btn-primary", method: :put do %>
              Downvote
                <%= photo.get_downvotes.size %>
              <% end %>
              <% end %>
            </div>
        </div>
    </div>
  </div>
</div>
